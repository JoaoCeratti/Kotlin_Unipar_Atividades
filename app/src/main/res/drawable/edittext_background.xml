<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fundo branco -->
            <stroke android:width="2dp" android:color="#FF0000" /> <!-- Borda vermelha -->
            <corners android:radius="8dp" /> <!-- Cantos arredondados -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#BDBDBD" /> <!-- Borda cinza quando nÃ£o focado -->
            <corners android:radius="8dp" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>